!!! XML
!!!
%html
  %head
    %meta(http-equiv="Content-Type" content="text/html; charset=utf-8")
    %meta(http-equiv="Content-Style-Type" content="text/css")
    %meta(http-equiv="Content-Script-Type" content="text/javascript")
    - if entry?
      %title== #{@entry.title} - #{@site.title}
    - else
      %title= @site.title
    %meta(name="viewport" content="width=device-width")
    %meta(name="description" content="#{@site.meta_description}")
    %meta(name="keywords" content="#{@site.meta_keywords}")
    %link(rel="shortcut icon" href="#{@theme.path}/favicon.ico")
    %link(title="#{@site.title}" rel="alternate" href="/index.atom" type="application/atom+xml")
    %link(rel="canonical" href="#{canonical_url}")
    %link(rel="stylesheet" href="#{@theme.path}/style.css" type="text/css")
    %link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css" type="text/css")
    %script(src="//ajax.googleapis.com/ajax/libs/jquery/1.8.1/jquery.min.js" type="text/javascript")
    = header
  %body
    #header.clearfix
      %h1= link_to @site.title, '/'
      %ul#nav
        %li.profile
          = image_tag '//1.gravatar.com/avatar/aca7b71389633fab164383ed343f080f?size=128', width: 24
          = link_to 'Profile', '/author'
        %li.github
          %i.fa.fa-github-square
          = link_to 'GitHub', 'http://github.com/morygonzalez'
        %li.twitter
          %i.fa.fa-twitter-square
          = link_to 'Twitter', 'http://twitter.com/morygonzalez'
        %li.archives
          %i.fa.fa-list
          = link_to 'Archives', '/archives'
        %li
          %form#search_form(action="/search/" method="get")
            %input(type="text" name="query" placeholder="Search")
      - unless index? or entry?
        #bread_crumb= bread_crumb

    #content.clearfix
      #main.hfeed= yield

    #footer
      #aside
        - cache_fragment :footer, shared: true do
          %dl.rcent_entries
            %dt= t('recent_entries')
            %dd
              %ul
                - Post.recent.each do |post|
                  %li= link_to post.title, post.link
          %dl.recent_comments
            %dt= t('recent_comments')
            %dd
              %ul
                - Comment.recent.each do |comment|
                  %li= link_to strip_tags(comment.body).truncate(16), comment.link
          %dl.tags
            %dt= t('tags')
            %dd
              %ul
                - Tag.all.each do |tag|
                  %li= link_to tag.name, tag.link
          %dl.archives
            %dt= link_to t('archives.title'), '/archives'
            %dd
              %ul
                - months.each_with_index do |m, i|
                  - if i < 6
                    %li= link_to "#{m.year}年#{m.month}月 (#{m.count})", "/#{m.year}/#{m.month}/"
              %p.more= link_to(t('archives.more'), '/archives', id: 'show_more_archive_list')
      .poweredby
        powered by
        = link_to 'Lokka', 'http://lokka.org/'
    = footer
    %script(type="text/javascript" src="#{@theme.path}/script.js")
