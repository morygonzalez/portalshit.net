%h2 Comment Notifier
%form{:action => '/admin/plugins/comment_notifier', :method => 'post'}
  %input{:type => 'hidden', :name => '_method', :value => 'put'}
  .field
    %label{:for => 'comment_notify_by'}= t("comment_notifier.notify_by")
    %br
    =select_tag 'comment_notifier[notify_by]', :options => ['im.kayac.com', 'email'], :selected => 'im.kayac.com', :value => Option.comment_notify_by, :id => 'comment_notify_by'
  .field
    %label{:for => 'comment_notify_to'}= t("comment_notifier.notify_to")
    %br
    %input{:type => 'text', :name => 'comment_notifier[notify_to]', :value => Option.comment_notify_to, :id => 'comment_notify_to'}
  .field
    %label{:for => 'comment_notify_password'}= t("comment_notifier.password")
    %br
    %input{:type => 'password', :name => 'comment_notifier[password]', :value => Option.comment_notify_password, :id => 'comment_notify_password'}
  .field
    %label{:for => 'comment_notify_sig'}= t("comment_notifier.signature")
    %br
    %input{:type => 'text', :name => 'comment_notifier[sig]', :value => Option.comment_notify_sig, :id => 'comment_notify_sig'}
  .field
    %input{:type => 'submit', :value => t('save')}
