    #libidn
    cd ${SRCDIR}/${LIBIDN}
    ./configure --with-iconv-prefix=${INSTALLDIR} --prefix=${INSTALLDIR}
    # make clean
    make
    make install
    
    #cURL
    cd ${SRCDIR}/${CURL}
    ./configure --with-ssl=${INSTALLDIR} --with-zlib=${INSTALLDIR} \
      --with-libidn=${INSTALLDIR} --enable-ipv6 --enable-cookies \
