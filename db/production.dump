&lt;option value="4"&gt;Referer&lt;/option&gt;
&lt;option value="5"&gt;Requested URI&lt;/option&gt;
&lt;/select&gt;
&lt;input type="hidden" value="{$yyyy}" name="y" class="bordered" /&gt;
&lt;input type="hidden" value="{$mm}" name="m" class="bordered" /&gt;
&lt;input type="hidden" value="{$dd}" name="d" class="bordered" /&gt;
&lt;input type="submit" value="GO" /&gt;
&lt;!-- &lt;input type="hidden" tabindex="100" accesskey="a" value="Admin" /&gt; --&gt;
